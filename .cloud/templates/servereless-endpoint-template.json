{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectName": {
            "defaultValue": "intelligent-apps",
            "type": "String"
        },
        "endpointName": {
            "defaultValue": "myserverless-text-1234ss",
            "type": "String"
        },
        "location": {
            "type": "String",
            "defaultValue": "[resourceGroup().location]"
        },
        "modelId": {
            "type": "String",
            "defaultValue": "azureml://registries/azureml-mistral/models/Mistral-large"
        }
    },
    "variables": {
        "modelName": "[substring(parameters('modelId'), add(lastIndexOf(parameters('modelId'), '/'),1))]",
        "subscriptionName": "[concat(parameters('projectName'), '/', variables('modelName'), '-subscription')]"
    },
    "resources": [
        {
            "type": "Microsoft.MachineLearningServices/workspaces/marketplaceSubscriptions",
            "apiVersion": "2024-04-01-preview",
            "name": "[variables('subscriptionName')]",
            "condition": "[not(startsWith(parameters('modelId'), 'azureml://registries/azureml/'))]",
            "properties": {
                "modelId": "[parameters('modelId')]"
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces/serverlessEndpoints",
            "apiVersion": "2024-04-01-preview",
            "name": "[concat(parameters('projectName'), '/', parameters('endpointName'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.MachineLearningServices/workspaces/marketplaceSubscriptions/', variables('subscriptionName'))]"
            ],
            "sku": {
                "name": "Consumption"
            },
            "properties": {
                "modelSettings": {
                    "modelId": "[parameters('modelId')]"
                }
            }
        },
        {
            "type": "Microsoft.MachineLearningServices/workspaces/connections",
            "apiVersion": "2024-04-01",
            "name": "[concat(parameters('workspaces_intelligent_apps_name'), '/llama-3-70b-instruct-qgxvd')]",
            "dependsOn": [
                "[resourceId('Microsoft.MachineLearningServices/workspaces/serverlessEndpoints/', concat(parameters('projectName'), '/', parameters('endpointName')))]"
            ],
            "properties": {
                "authType": "ApiKey",
                "category": "Serverless",
                "target": "[outputs('endpointUri')]",
                "isSharedToAll": true,
                "sharedUserList": [],
                "metadata": {
                    "ApiType": "Azure"
                }
            }
        }
    ],
    "outputs": {
        "endpointUri": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.MachineLearningServices/workspaces/serverlessEndpoints/', concat(parameters('projectName'), '/', parameters('endpointName')))).inferenceEndpoint.uri]"
        }
    }
}